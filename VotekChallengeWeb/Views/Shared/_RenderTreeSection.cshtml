@model List<VotekChallengeWeb.Models.TreeModels>

@*Start Tree Visualizer Section*@
@if (Model.Count > 0)
{
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading panel-head">Tree Visualizer

            </div>
            <div id="frm-author" class="panel-body">
                <div class="tree">
                    <ul>
                        <li>
                            <a>
                                <label>
                                    <strong>Tree Tittle:</strong> @Html.DisplayFor(model => model[0].Title)
                                </label>
                            </a>
                        </li>
                        <ul>
                            @{
    for (int i = 1; i < Model.Count; i++)
    {
        <li>
            <a>
                <label>
                    <strong>Tree Tittle:</strong> @Html.DisplayFor(model => model[i].Title)
                </label><br /><i class="glyphicon glyphicon-book"><strong> ID :</strong> @Html.DisplayFor(model => model[i].id)</i>
            </a>
            <ul>

                @for (int j = 0; j < Model[i].Childs.Count; j++)
                {
                    <li>
                        <a>
                            <label>
                                <strong>Tree Tittle:</strong> @Html.DisplayFor(model => Model[i].Childs[j].Title)
                            </label><br /><i class="glyphicon glyphicon-book"><strong> ID :</strong> @Html.DisplayFor(model => model[i].Childs[j].id)</i>
                        </a>

                        <ul>

                            @for (int k = 0; k < Model[i].Childs[j].Childs.Count; k++)
                            {
                                <li>
                                    <a>
                                        <label>
                                            <strong>Tree Tittle:</strong> @Html.DisplayFor(model => Model[i].Childs[j].Childs[k].Title)
                                        </label><br /><i class="glyphicon glyphicon-book"><strong> ID :</strong> @Html.DisplayFor(model => model[i].Childs[j].Childs[k].id)</i>
                                    </a>
                                </li>
                            }

                        </ul>

                    </li>
                }

            </ul>

        </li>
    }
                            }
                            <li>

                            </li>
                        </ul>
                    </ul>

                </div>

            </div>
            <div class="form-inline">
                <input class="btn btn-default" style="width:100px; margin-left:20px" type="button" id="Save" value="Save" />
                <input class="btn btn-default" style="width:100px; margin-left:20px" type="button" id="Export" value="Export" />
            </div>

        </div>
    </div>
    <div class="row"><textarea id="HiddenModel" style="width:300px; height:300px;" class="hidden">@ViewBag.HiddenObject</textarea></div>

}
    @*End Tree Visualizer Section*@
